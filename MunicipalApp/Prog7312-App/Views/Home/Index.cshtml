@model List<Prog7312_App.Models.Announcement>
@{
    ViewData["Title"] = "Municipal Services Portal";
}
<section class="bg-gradient-to-r from-blue-800 to-blue-900 text-white">
    <div class="max-w-7xl mx-auto px-6 py-16">
        <div class="text-center">
            <h1 class="text-4xl md:text-5xl mb-4">Welcome to Municipal Services</h1>
            <p class="text-xl text-teal-100 mb-8 max-w-2xl mx-auto">
                Your one-stop portal for all municipal services.
                Report issues, stay informed, and connect with your community.
            </p>
            <a href="@Url.Action("ReportIssue", "Services")" class="inline-flex items-center px-6 py-3 bg-white text-blue-800 hover:bg-gray-100 rounded-lg font-medium transition-colors">
                Report an Issue
                <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-2M7 7h10v10M14 7l-7 7"></path>
                </svg>
            </a>
        </div>
    </div>
</section>

<section class="py-16">
    <div class="max-w-7xl mx-auto px-6">
        <div class="text-center mb-12">
            <h2 class="text-3xl text-gray-900 mb-4">Quick Services</h2>
        
            <p class="text-gray-600 max-w-2xl mx-auto">
                Access our most popular municipal services quickly and easily
            </p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-16">
            <div class="bg-red-500 hover:bg-red-600 transition-all duration-200 ring-2 ring-red-300 shadow-lg 
cursor-pointer hover:scale-105 rounded-lg" onclick="location.href='@Url.Action("ReportIssue", "Services")'">
                <div class="p-6 text-center">
                    <div class="w-16 h-16 rounded-full bg-white bg-opacity-20 flex items-center justify-center mx-auto mb-4">
                        <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
               
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L3.732 16.5c-.77.833.192 2.5 1.732 2.5z"></path>
                        </svg>
                    </div>
                    <h3 class="text-lg mb-2 text-white">Report Issues</h3>
   
                  <p class="text-sm text-white opacity-90 mb-4">Submit reports for roads, utilities, sanitation, and more</p>
                    <span class="inline-block bg-white text-red-600 px-3 py-1 rounded-full text-xs font-medium">
                        Available Now
                   
 </span>
                </div>
            </div>

            <div class="bg-green-500 hover:bg-green-600 transition-all duration-200 ring-2 ring-green-300 shadow-lg cursor-pointer hover:scale-105 rounded-lg" onclick="location.href='@Url.Action("Index", "Events")'">
                <div class="p-6 text-center">
              
                    <div class="w-16 h-16 rounded-full bg-white bg-opacity-20 flex items-center justify-center mx-auto mb-4">
                        <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
 
                       </svg>
                    </div>
                    <h3 class="text-lg mb-2 text-white">Local Events & Announcements</h3>
                    <p class="text-sm text-white opacity-90 mb-4">View local events and community announcements</p>
  
                   <span class="inline-block bg-white text-green-600 px-3 py-1 rounded-full text-xs font-medium">
                        Available Now
                    </span>
                </div>
            </div>

 
            <div class="bg-blue-600 hover:bg-blue-700 transition-all duration-200 ring-2 ring-blue-300 shadow-lg 
cursor-pointer hover:scale-105 rounded-lg" onclick="location.href='@Url.Action("ViewRequests", "Services")'">
                <div class="p-6 text-center">
                    <div class="w-16 h-16 rounded-full bg-white bg-opacity-20 flex items-center justify-center mx-auto mb-4">
                       
                        <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
                        </svg>
                    </div>
    
                    <h3 class="text-lg mb-2 text-white">Service Request Status</h3>
                    <p class="text-sm text-white opacity-90 mb-4">Check the status of your submitted service requests</p>
                    <span class="inline-block bg-white text-blue-600 px-3 py-1 rounded-full text-xs font-medium">
                     
                        Available Now
                    </span>
                </div>
            </div>
        </div>

        <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
            <div class="bg-white rounded-lg shadow-sm border border-gray-200">
                <div class="p-6 border-b border-gray-200">
                    <h3 class="text-lg font-semibold text-gray-900">Contact Information</h3>
                    <p class="text-gray-600">Get in touch with us for assistance</p>
               
 </div>
                <div class="p-6 space-y-4">
                    <div class="flex items-center gap-4">
                        <div class="w-12 h-12 bg-red-100 rounded-lg flex items-center justify-center">
                           
                            <svg class="w-6 h-6 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
                     
                   </svg>
                        </div>
                        <div>
                            <h4 class="text-gray-900">Emergency Hotline</h4>
               
                            <p class="text-gray-600">0860 111 911</p>
                            <p class="text-sm text-gray-500">Available 24/7 for emergencies</p>
                        </div>
                    </div>
       
                    <div class="flex items-center gap-4">
                        <div class="w-12 h-12 bg-teal-100 rounded-lg flex items-center justify-center">
                            <svg class="w-6 h-6 text-teal-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                            </svg>
                        </div>
      
                      <div>
                            <h4 class="text-gray-900">General Inquiries</h4>
                            <p class="text-gray-600">info@municipality.gov.za</p>
                       
             <p class="text-sm text-gray-500">Mon-Fri, 8:00 AM - 5:00 PM</p>
                        </div>
                    </div>
                </div>
            </div>

            <div class="bg-white rounded-lg shadow-sm border border-gray-200">
                <div class="p-6 border-b border-gray-200">
                    <h3 class="text-lg font-semibold text-gray-900">Latest Municipal Updates</h3>
                    <p class="text-gray-600">Stay informed about important notices</p>
               
 </div>
                <div class="p-6 space-y-4 max-h-80 overflow-y-auto">
                    <div class="p-3 border border-gray-100 rounded-lg hover:bg-gray-50 cursor-pointer transition-colors">
                        <div class="flex items-start justify-between mb-2">
                        
                            <h4 class="text-sm text-gray-900 font-medium">Load Shedding Schedule Update</h4>
                            <div class="w-2 h-2 rounded-full flex-shrink-0 mt-2 bg-red-500"></div>
                        </div>
                        <p class="text-xs text-gray-600 mb-2">Updated load shedding schedule for 
municipal areas. Stage 2 load shedding continues.</p>
                        <p class="text-xs text-gray-500">6 Sep 2024</p>
                    </div>
                    <div class="p-3 border border-gray-100 rounded-lg hover:bg-gray-50 cursor-pointer transition-colors">
                   
                        <div class="flex items-start justify-between mb-2">
                            <h4 class="text-sm text-gray-900 font-medium">Water Restrictions Notice</h4>
                            <div class="w-2 h-2 rounded-full flex-shrink-0 mt-2 bg-yellow-500"></div>
                        
 </div>
                        <p class="text-xs text-gray-600 mb-2">Level 3 water restrictions remain in effect.
Residents encouraged to conserve water.</p>
                        <p class="text-xs text-gray-500">5 Sep 2024</p>
                    </div>
                    <div class="p-3 border border-gray-100 rounded-lg hover:bg-gray-50 cursor-pointer transition-colors">
                     
                        <div class="flex items-start justify-between mb-2">
                            <h4 class="text-sm text-gray-900 font-medium">Municipal Rates Payment</h4>
                            <div class="w-2 h-2 rounded-full flex-shrink-0 mt-2 bg-green-500"></div>
                        </div>
  
                        <p class="text-xs text-gray-600 mb-2">Monthly municipal rates are due by the 7th of each month.
Pay online or at municipal offices.</p>
                        <p class="text-xs text-gray-500">4 Sep 2024</p>
                    </div>
                    <div class="p-3 border border-gray-100 rounded-lg hover:bg-gray-50 cursor-pointer transition-colors">
                    
                        <div class="flex items-start justify-between mb-2">
                            <h4 class="text-sm text-gray-900 font-medium">Heritage Day Public Holiday</h4>
                            <div class="w-2 h-2 rounded-full flex-shrink-0 mt-2 bg-yellow-500"></div>
                        
 </div>
                        <p class="text-xs text-gray-600 mb-2">Municipal offices will be closed on Heritage Day (24 September).
Emergency services remain operational.</p>
                        <p class="text-xs text-gray-500">2 Sep 2024</p>
                    </div>
                </div>
                <div class="p-6 border-t border-gray-200">
              
                    <button class="w-full px-4 py-2 border border-gray-300 rounded-lg text-gray-700 hover:bg-gray-50 transition-colors">
                        View All Updates
                    </button>
                </div>
            </div>
        </div>
   
  </div>
</section>