<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Municipal Services Portal</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        'blue-800': '#0f766e',
                        'blue-900': '#134e4a',
                    }
                }
            }
        }
    </script>
    <!-- Removed incorrect lucide include (JS was linked as stylesheet). Add if needed as a script: 
         <script src="https://unpkg.com/lucide@latest/dist/umd/lucide.js"></script> -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <header class="bg-blue-800 text-white shadow-lg">
        <div class="max-w-7xl mx-auto">
            <!-- Top bar with logo and title -->
            <div class="flex items-center justify-between px-6 py-4">
                <div class="flex items-center gap-4">
                    <div class="w-12 h-12 bg-white rounded-lg flex items-center justify-center">
                        <svg class="w-8 h-8 text-blue-800" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
                        </svg>
                    </div>
                    <div>
                        <h1 class="text-xl font-semibold">Municipal Services Portal</h1>
                        <p class="text-teal-200 text-sm">City of Johannesburg</p>
                    </div>
                </div>

                <!-- Desktop Navigation -->
                <nav class="hidden md:flex items-center space-x-1">
                    <a href="@Url.Action("Index", "Home")" class="px-4 py-2 rounded-lg text-sm font-medium transition-colors text-teal-100 hover:bg-teal-700 hover:text-white">
                        Home
                    </a>
                    <a href="@Url.Action("ReportIssue", "Services")" class="px-4 py-2 rounded-lg text-sm font-medium transition-colors text-teal-100 hover:bg-teal-700 hover:text-white">
                        Report Issues
                    </a>
                    @if (Context.Session.GetString("UserId") != null)
                    {
                        <a href="@Url.Action("ViewRequests", "Services")" class="px-4 py-2 rounded-lg text-sm font-medium transition-colors text-teal-100 hover:bg-teal-700 hover:text-white">
                            My Requests
                        </a>
                    }
                    <a href="@Url.Action("Index", "Events")" class="px-4 py-2 rounded-lg text-sm font-medium transition-colors text-teal-100 hover:bg-teal-700 hover:text-white">
                        Events & Announcements
                    </a>
                    <a href="@Url.Action("Help", "Home")" class="px-4 py-2 rounded-lg text-sm font-medium transition-colors text-teal-100 hover:bg-teal-700 hover:text-white">
                        Help & Support
                    </a>
                    
                    @if (Context.Session.GetString("UserId") != null)
                    {
                        <!-- User is logged in -->
                        <div class="relative ml-3">
                            <div class="flex items-center space-x-2">
                                <span class="text-teal-100 text-sm">Welcome, @Context.Session.GetString("UserName")!</span>
                                <div class="relative">
                                    <button type="button" class="flex text-sm rounded-full focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-offset-teal-800 focus:ring-white" id="user-menu-button" onclick="toggleUserMenu()">
                                        <span class="sr-only">Open user menu</span>
                                        <div class="h-8 w-8 rounded-full bg-teal-600 flex items-center justify-center">
                                            <span class="text-sm font-medium text-white">@Context.Session.GetString("UserName")?.Substring(0, 1).ToUpper()</span>
                                        </div>
                                    </button>
                                    <div class="origin-top-right absolute right-0 mt-2 w-48 rounded-md shadow-lg py-1 bg-white ring-1 ring-black ring-opacity-5 focus:outline-none hidden" id="user-menu" role="menu">
                                        <a href="@Url.Action("Profile", "Account")" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100" role="menuitem">Your Profile</a>
                                        <a href="@Url.Action("Logout", "Account")" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100" role="menuitem">Sign out</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                    else
                    {
                        <!-- User is not logged in -->
                        <div class="flex items-center space-x-2 ml-4">
                            <a href="@Url.Action("Login", "Account")" class="px-4 py-2 rounded-lg text-sm font-medium transition-colors bg-teal-600 text-white hover:bg-teal-700">
                                Sign In
                            </a>
                            <a href="@Url.Action("Register", "Account")" class="px-4 py-2 rounded-lg text-sm font-medium transition-colors bg-teal-600 text-white hover:bg-teal-700">
                                Sign Up
                            </a>
                        </div>
                    }
                </nav>

                <!-- Mobile menu button -->
                <button class="md:hidden text-white hover:bg-teal-700 p-2 rounded" onclick="toggleMobileMenu()">
                    <svg id="menu-icon" class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
                    </svg>
                    <svg id="close-icon" class="w-5 h-5 hidden" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                    </svg>
                </button>
            </div>

            <!-- Mobile Navigation -->
            <nav id="mobile-menu" class="md:hidden px-6 pb-4 border-t border-teal-700 hidden">
                <div class="flex flex-col space-y-2 pt-4">
                    <a href="@Url.Action("Index", "Home")" class="px-4 py-3 rounded-lg text-left text-sm font-medium transition-colors text-teal-100 hover:bg-teal-700 hover:text-white">
                        Home
                    </a>
                    <a href="@Url.Action("ReportIssue", "Services")" class="px-4 py-3 rounded-lg text-left text-sm font-medium transition-colors text-teal-100 hover:bg-teal-700 hover:text-white">
                        Report Issues
                    </a>
                    @if (Context.Session.GetString("UserId") != null)
                    {
                        <a href="@Url.Action("ViewRequests", "Services")" class="px-4 py-3 rounded-lg text-left text-sm font-medium transition-colors text-teal-100 hover:bg-teal-700 hover:text-white">
                            My Requests
                        </a>
                    }
                    <a href="@Url.Action("Index", "Events")" class="px-4 py-3 rounded-lg text-left text-sm font-medium transition-colors text-teal-100 hover:bg-teal-700 hover:text-white">
                        Events & Announcements
                    </a>
                    <a href="@Url.Action("Help", "Home")" class="px-4 py-3 rounded-lg text-left text-sm font-medium transition-colors text-teal-100 hover:bg-teal-700 hover:text-white">
                        Help & Support
                    </a>
                    
                    @if (Context.Session.GetString("UserId") != null)
                    {
                        <!-- User is logged in - Mobile -->
                        <div class="border-t border-teal-700 pt-4 mt-4">
                            <div class="px-4 py-2 text-teal-100 text-sm">Welcome, @Context.Session.GetString("UserName")!</div>
                            <a href="@Url.Action("Profile", "Account")" class="px-4 py-3 rounded-lg text-left text-sm font-medium transition-colors text-teal-100 hover:bg-teal-700 hover:text-white">
                                Your Profile
                            </a>
                            <a href="@Url.Action("Logout", "Account")" class="px-4 py-3 rounded-lg text-left text-sm font-medium transition-colors text-teal-100 hover:bg-teal-700 hover:text-white">
                                Sign Out
                            </a>
                        </div>
                    }
                    else
                    {
                        <!-- User is not logged in - Mobile -->
                        <div class="border-t border-teal-700 pt-4 mt-4 space-y-2">
                            <a href="@Url.Action("Login", "Account")" class="px-4 py-3 rounded-lg text-left text-sm font-medium transition-colors bg-teal-600 text-white hover:bg-teal-700">
                                Sign In
                            </a>
                            <a href="@Url.Action("Register", "Account")" class="px-4 py-3 rounded-lg text-left text-sm font-medium transition-colors bg-teal-600 text-white hover:bg-teal-700">
                                Sign Up
                            </a>
                        </div>
                    }
                </div>
            </nav>
        </div>
    </header>

    <div class="min-h-screen bg-gray-50">
        @RenderBody()
    </div>

    <footer class="bg-white border-t border-gray-200 py-8">
        <div class="max-w-7xl mx-auto px-6">
            <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
                <div class="col-span-2">
                    <div class="flex items-center gap-4 mb-4">
                        <div class="w-10 h-10 bg-blue-800 rounded-lg flex items-center justify-center">
                            <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
                            </svg>
                        </div>
                        <div>
                            <h3 class="text-lg font-semibold text-gray-900">Municipal Services Portal</h3>
                            <p class="text-gray-600">City of Johannesburg</p>
                        </div>
                    </div>
                    <p class="text-gray-600 mb-4">
                        Your trusted partner for municipal services. We're committed to serving our community with excellence and transparency.
                    </p>
                </div>
                <div>
                    <h4 class="text-gray-900 font-medium mb-4">Quick Links</h4>
                    <ul class="space-y-2 text-gray-600">
                        <li><a href="@Url.Action("Index", "Home")" class="hover:text-teal-600">Home</a></li>
                        <li><a href="@Url.Action("ReportIssue", "Services")" class="hover:text-teal-600">Report Issues</a></li>
                        <li><a href="@Url.Action("Index", "Events")" class="hover:text-teal-600">Events & Announcements</a></li>
                        <li><a href="@Url.Action("Help", "Home")" class="hover:text-teal-600">Help & Support</a></li>
                    </ul>
                </div>
                <div>
                    <h4 class="text-gray-900 font-medium mb-4">Contact</h4>
                    <ul class="space-y-2 text-gray-600">
                        <li>Emergency: 0860 111 911</li>
                        <li>Email: info@municipality.gov.za</li>
                        <li>Mon-Fri: 8:00 AM - 5:00 PM</li>
                    </ul>
                </div>
            </div>
            <div class="border-t border-gray-200 mt-8 pt-8 text-center text-gray-600">
                <p>&copy; 2025 Municipal Services Portal. All rights reserved.</p>
            </div>
        </div>
    </footer>
    <script>
        function toggleMobileMenu() {
            const mobileMenu = document.getElementById('mobile-menu');
            const menuIcon = document.getElementById('menu-icon');
            const closeIcon = document.getElementById('close-icon');
            
            if (mobileMenu.classList.contains('hidden')) {
                mobileMenu.classList.remove('hidden');
                menuIcon.classList.add('hidden');
                closeIcon.classList.remove('hidden');
            } else {
                mobileMenu.classList.add('hidden');
                menuIcon.classList.remove('hidden');
                closeIcon.classList.add('hidden');
            }
        }

        function toggleUserMenu() {
            const userMenu = document.getElementById('user-menu');
            if (userMenu.classList.contains('hidden')) {
                userMenu.classList.remove('hidden');
            } else {
                userMenu.classList.add('hidden');
            }
        }

        // Close user menu when clicking outside
        document.addEventListener('click', function(event) {
            const userMenu = document.getElementById('user-menu');
            const userMenuButton = document.getElementById('user-menu-button');
            
            if (userMenu && userMenuButton && !userMenuButton.contains(event.target) && !userMenu.contains(event.target)) {
                userMenu.classList.add('hidden');
            }
        });
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
