@model Prog7312_App.Models.ServiceRequest
@{
    ViewData["Title"] = "Report Submitted Successfully";
}

<!-- Razor View for Municipal Services Portal homepage with announcements and services.
     Author: Microsoft Docs Contributors
     Reference: https://learn.microsoft.com/en-us/aspnet/core/mvc/views/overview -->
     
<main class="min-h-screen bg-gray-50">
    <!-- Success Section -->
    <section class="py-16">
        <div class="max-w-4xl mx-auto px-6 text-center">
            <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-12">
                <!-- Success Icon -->
                <div class="w-20 h-20 bg-green-100 rounded-full flex items-center justify-center mx-auto mb-6">
                    <svg class="w-10 h-10 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                    </svg>
                </div>

                <h1 class="text-3xl text-gray-900 mb-4">Report Submitted Successfully!</h1>
                <p class="text-gray-600 mb-8 max-w-2xl mx-auto">
                    Thank you for reporting this issue. Your service request has been received and will be processed by our municipal team.
                </p>

                <!-- Reference Details -->
                <div class="bg-teal-50 border border-teal-200 rounded-lg p-6 mb-8">
                    <h2 class="text-lg font-semibold text-teal-900 mb-4">Reference Details</h2>
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-4 text-left">
                        <div>
                            <p class="text-sm text-teal-600 font-medium">Reference Number</p>
                            <p class="text-teal-900 font-mono text-lg">@Model.ReferenceNumber</p>
                        </div>
                        <div>
                            <p class="text-sm text-teal-600 font-medium">Submitted Date</p>
                            <p class="text-teal-900">@Model.CreatedAt.ToString("dddd, MMMM dd, yyyy 'at' h:mm tt")</p>
                        </div>
                        <div>
                            <p class="text-sm text-teal-600 font-medium">Category</p>
                            <p class="text-teal-900 capitalize">@Model.Category</p>
                        </div>
                        <div>
                            <p class="text-sm text-teal-600 font-medium">Status</p>
                            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800">
                                @Model.Status
                            </span>
                        </div>
                    </div>
                </div>

                <!-- Issue Summary -->
                <div class="bg-gray-50 border border-gray-200 rounded-lg p-6 mb-8 text-left">
                    <h3 class="text-lg font-semibold text-gray-900 mb-4">Issue Summary</h3>
                    <div class="space-y-3">
                        <div>
                            <p class="text-sm text-gray-600 font-medium">Location</p>
                            <p class="text-gray-900">@Model.Location</p>
                        </div>
                        <div>
                            <p class="text-sm text-gray-600 font-medium">Description</p>
                            <p class="text-gray-900">@Model.Description</p>
                        </div>
                        @if (Model.AttachmentPaths.Any())
                        {
                            <div>
                                <p class="text-sm text-gray-600 font-medium">Attachments</p>
                                <p class="text-gray-900">@Model.AttachmentPaths.Count file(s) uploaded</p>
                            </div>
                        }
                    </div>
                </div>

                <!-- Next Steps -->
                <div class="bg-white border border-gray-200 rounded-lg p-6 mb-8">
                    <h3 class="text-lg font-semibold text-gray-900 mb-4">What Happens Next?</h3>
                    <div class="grid grid-cols-1 md:grid-cols-3 gap-6 text-center">
                        <div>
                            <div class="w-12 h-12 bg-teal-100 rounded-full flex items-center justify-center mx-auto mb-3">
                                <svg class="w-6 h-6 text-teal-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v10a2 2 0 002 2h8a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"></path>
                                </svg>
                            </div>
                            <h4 class="font-medium text-gray-900 mb-2">Review</h4>
                            <p class="text-sm text-gray-600">Our team will review your report within 24-48 hours</p>
                        </div>
                        <div>
                            <div class="w-12 h-12 bg-yellow-100 rounded-full flex items-center justify-center mx-auto mb-3">
                                <svg class="w-6 h-6 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                                </svg>
                            </div>
                            <h4 class="font-medium text-gray-900 mb-2">Process</h4>
                            <p class="text-sm text-gray-600">We'll assign the appropriate team and begin work</p>
                        </div>
                        <div>
                            <div class="w-12 h-12 bg-green-100 rounded-full flex items-center justify-center mx-auto mb-3">
                                <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                                </svg>
                            </div>
                            <h4 class="font-medium text-gray-900 mb-2">Resolution</h4>
                            <p class="text-sm text-gray-600">You'll be notified when the issue is resolved</p>
                        </div>
                    </div>
                </div>

                <!-- Feedback Section -->
                <div class="bg-gradient-to-r from-teal-50 to-blue-50 border border-teal-200 rounded-lg p-6 mb-8">
                    <h3 class="text-lg font-semibold text-teal-900 mb-4">üìù Help Us Improve - Quick Feedback</h3>
                    <p class="text-teal-700 mb-4">How was your experience submitting this report? Your feedback helps us serve Johannesburg better.</p>
                    
                    <form id="feedbackForm" class="space-y-4">
                        <input type="hidden" name="ServiceRequestId" value="@Model.Id" />
                        <input type="hidden" name="ReferenceNumber" value="@Model.ReferenceNumber" />
                        
                        <!-- Overall Rating -->
                        <div>
                            <label class="block text-sm font-medium text-teal-800 mb-2">Overall Experience</label>
                            <div class="flex gap-2" id="overallRating">
                                @for (int i = 1; i <= 5; i++)
                                {
                                    <button type="button" class="star-btn w-8 h-8 text-gray-300 hover:text-yellow-400 transition-colors" data-rating="@i" data-field="OverallRating">
                                        <svg fill="currentColor" viewBox="0 0 20 20">
                                            <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
                                        </svg>
                                    </button>
                                }
                            </div>
                            <input type="hidden" name="OverallRating" id="OverallRatingValue" />
                        </div>

                        <!-- Quick ratings -->
                        <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
                            <div>
                                <label class="block text-sm font-medium text-teal-800 mb-1">Ease of Reporting</label>
                                <div class="flex gap-1" data-field="EaseOfReporting">
                                    @for (int i = 1; i <= 5; i++)
                                    {
                                        <button type="button" class="star-btn w-6 h-6 text-gray-300 hover:text-yellow-400" data-rating="@i" data-field="EaseOfReporting">
                                            <svg fill="currentColor" viewBox="0 0 20 20"><path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/></svg>
                                        </button>
                                    }
                                </div>
                                <input type="hidden" name="EaseOfReporting" />
                            </div>
                            <div>
                                <label class="block text-sm font-medium text-teal-800 mb-1">Website Usability</label>
                                <div class="flex gap-1" data-field="WebsiteUsability">
                                    @for (int i = 1; i <= 5; i++)
                                    {
                                        <button type="button" class="star-btn w-6 h-6 text-gray-300 hover:text-yellow-400" data-rating="@i" data-field="WebsiteUsability">
                                            <svg fill="currentColor" viewBox="0 0 20 20"><path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/></svg>
                                        </button>
                                    }
                                </div>
                                <input type="hidden" name="WebsiteUsability" />
                            </div>
                            <div>
                                <label class="block text-sm font-medium text-teal-800 mb-1">Information Clarity</label>
                                <div class="flex gap-1" data-field="InformationClarity">
                                    @for (int i = 1; i <= 5; i++)
                                    {
                                        <button type="button" class="star-btn w-6 h-6 text-gray-300 hover:text-yellow-400" data-rating="@i" data-field="InformationClarity">
                                            <svg fill="currentColor" viewBox="0 0 20 20"><path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/></svg>
                                        </button>
                                    }
                                </div>
                                <input type="hidden" name="InformationClarity" />
                            </div>
                        </div>

                        <!-- Optional comment -->
                        <div>
                            <label class="block text-sm font-medium text-teal-800 mb-1">Any suggestions or comments? (Optional)</label>
                            <textarea name="Comments" rows="2" class="w-full px-3 py-2 border border-teal-300 rounded-lg focus:ring-2 focus:ring-teal-500 focus:border-teal-500 text-sm" placeholder="Tell us what went well or how we can improve..."></textarea>
                        </div>

                        <!-- Would recommend -->
                        <div class="flex items-center">
                            <input type="hidden" name="WouldRecommend" value="false" />
                            <input type="checkbox" name="WouldRecommend" id="wouldRecommend" value="true" class="h-4 w-4 text-teal-600 focus:ring-teal-500 border-teal-300 rounded" />
                            <label for="wouldRecommend" class="ml-2 text-sm text-teal-800">I would recommend this service to other residents</label>
                        </div>

                        <div class="flex gap-3">
                            <button type="submit" class="px-4 py-2 bg-teal-600 text-white rounded-lg hover:bg-teal-700 transition-colors text-sm font-medium" id="submitFeedback">
                                Submit Feedback
                            </button>
                            <button type="button" class="px-4 py-2 text-teal-600 hover:text-teal-800 text-sm" onclick="document.getElementById('feedbackForm').style.display='none'">
                                Skip for now
                            </button>
                        </div>
                    </form>
                    
                    <div id="feedbackSuccess" class="hidden mt-4 p-3 bg-green-100 border border-green-300 rounded-lg">
                        <p class="text-green-800 text-sm">‚úÖ Thank you for your feedback! It helps us improve our services for all Johannesburg residents.</p>
                    </div>
                </div>

                <!-- Action Buttons -->
                <div class="flex flex-col sm:flex-row gap-4 justify-center">
                    <a href="@Url.Action("Index", "Home")" 
                       class="px-6 py-3 bg-teal-600 text-white rounded-lg hover:bg-teal-700 transition-colors font-medium">
                        Return to Dashboard
                    </a>
                    <a href="@Url.Action("ReportIssue", "Services")" 
                       class="px-6 py-3 border border-gray-300 text-gray-700 rounded-lg hover:bg-gray-50 transition-colors font-medium">
                        Report Another Issue
                    </a>
                </div>

                <!-- Contact Information -->
                <div class="mt-12 pt-8 border-t border-gray-200">
                    <p class="text-sm text-gray-600 mb-4">
                        <strong>Important:</strong> Please save your reference number <span class="font-mono bg-gray-100 px-2 py-1 rounded">@Model.ReferenceNumber</span> for future reference.
                    </p>
                    <p class="text-sm text-gray-600">
                        For urgent matters, contact our emergency hotline at <strong>0860 111 911</strong>
                    </p>
                </div>
            </div>
        </div>
    </section>
</main>

@section Scripts {
    <script>
        // Star rating functionality
        document.addEventListener('DOMContentLoaded', function() {
            const starContainers = document.querySelectorAll('[data-field], #overallRating');
            
            starContainers.forEach(container => {
                const stars = container.querySelectorAll('.star-btn');
                let currentRating = 0;
                
                stars.forEach((star, index) => {
                    // Click handler
                    star.addEventListener('click', function() {
                        const rating = parseInt(this.dataset.rating);
                        const field = this.dataset.field;
                        currentRating = rating;
                        
                        // Update visual stars
                        stars.forEach((s, i) => {
                            s.classList.remove('text-gray-300', 'text-yellow-400', 'text-yellow-300');
                            if (i < rating) {
                                s.classList.add('text-yellow-400');
                            } else {
                                s.classList.add('text-gray-300');
                            }
                        });
                        
                        // Update hidden input
                        const hiddenInput = document.querySelector(`input[name="${field}"]`);
                        if (hiddenInput) {
                            hiddenInput.value = rating;
                        }
                    });
                    
                    // Hover effects
                    star.addEventListener('mouseenter', function() {
                        const hoverRating = parseInt(this.dataset.rating);
                        stars.forEach((s, i) => {
                            if (currentRating === 0) { // Only show hover if no rating selected
                                s.classList.remove('text-gray-300', 'text-yellow-300');
                                if (i < hoverRating) {
                                    s.classList.add('text-yellow-300');
                                } else {
                                    s.classList.add('text-gray-300');
                                }
                            }
                        });
                    });
                    
                    // Mouse leave - restore selected state or gray
                    star.addEventListener('mouseleave', function() {
                        if (currentRating === 0) {
                            stars.forEach(s => {
                                s.classList.remove('text-yellow-300');
                                s.classList.add('text-gray-300');
                            });
                        }
                    });
                });
            });
            
            // Form submission
            document.getElementById('feedbackForm').addEventListener('submit', function(e) {
                e.preventDefault();
                
                const formData = new FormData(this);
                const submitButton = document.getElementById('submitFeedback');
                const originalText = submitButton.textContent;
                
                // Validate overall rating is required
                if (!formData.get('OverallRating')) {
                    alert('Please provide an overall rating before submitting.');
                    return;
                }
                
                submitButton.textContent = 'Submitting...';
                submitButton.disabled = true;
                
                fetch('@Url.Action("SubmitFeedback", "Feedback")', {
                    method: 'POST',
                    body: formData,
                    headers: {
                        'X-Requested-With': 'XMLHttpRequest'
                    }
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        document.getElementById('feedbackForm').style.display = 'none';
                        document.getElementById('feedbackSuccess').classList.remove('hidden');
                    } else {
                        alert('Error submitting feedback: ' + (data.errors ? data.errors.join(', ') : 'Unknown error'));
                        submitButton.textContent = originalText;
                        submitButton.disabled = false;
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    alert('Error submitting feedback. Please try again.');
                    submitButton.textContent = originalText;
                    submitButton.disabled = false;
                });
            });
        });
    </script>
}
