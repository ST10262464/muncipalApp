@model Prog7312_App.Models.EventSearchViewModel
@{
    ViewData["Title"] = "Local Events & Announcements";
}

<!-- Hero Section -->
<section class="bg-gradient-to-r from-blue-800 to-blue-900 text-white">
    <div class="max-w-7xl mx-auto px-6 py-12">
        <div class="text-center">
            <h1 class="text-4xl md:text-5xl mb-4">Local Events & Announcements</h1>
            <p class="text-xl text-teal-100 mb-8 max-w-2xl mx-auto">
                Discover upcoming events, community activities, and important announcements in your area
            </p>
        </div>

        <!-- Search Bar -->
        <div class="max-w-4xl mx-auto">
            <form asp-action="Search" method="get" class="bg-white rounded-lg shadow-lg p-6">
                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4 mb-4">
                    <!-- Search Query -->
                    <div class="lg:col-span-2">
                        <label for="searchQuery" class="block text-sm font-medium text-gray-700 mb-2">Search Events</label>
                        <input type="text" id="searchQuery" name="searchQuery" value="@Model.SearchQuery"
                               class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent text-gray-900"
                               placeholder="Search by title, description, or location...">
                    </div>

                    <!-- Category Filter -->
                    <div>
                        <label for="category" class="block text-sm font-medium text-gray-700 mb-2">Category</label>
                        <select id="category" name="category" 
                                class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent text-gray-900">
                            <option value="">All Categories</option>
                            @for (int i = 0; i < Model.Categories.Count; i++)
                            {
                                var cat = Model.Categories[i];
                                <option value="@cat" selected="@(Model.SelectedCategory == cat)">@cat</option>
                            }
                        </select>
                    </div>

                    <!-- Sort By -->
                    <div>
                        <label for="sortBy" class="block text-sm font-medium text-gray-700 mb-2">Sort By</label>
                        <select id="sortBy" name="sortBy" 
                                class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent text-gray-900">
                            <option value="date" selected="@(Model.SortBy == "date")">Date</option>
                            <option value="priority" selected="@(Model.SortBy == "priority")">Priority</option>
                            <option value="title" selected="@(Model.SortBy == "title")">Title</option>
                        </select>
                    </div>
                </div>

                <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
                    <!-- Start Date -->
                    <div>
                        <label for="startDate" class="block text-sm font-medium text-gray-700 mb-2">From Date</label>
                        <input type="date" id="startDate" name="startDate" value="@Model.StartDate?.ToString("yyyy-MM-dd")"
                               class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent text-gray-900">
                    </div>

                    <!-- End Date -->
                    <div>
                        <label for="endDate" class="block text-sm font-medium text-gray-700 mb-2">To Date</label>
                        <input type="date" id="endDate" name="endDate" value="@Model.EndDate?.ToString("yyyy-MM-dd")"
                               class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent text-gray-900">
                    </div>

                    <!-- Search Button -->
                    <div class="flex items-end">
                        <button type="submit" class="w-full px-6 py-2 bg-blue-800 text-white rounded-lg hover:bg-blue-900 transition-colors font-medium">
                            <svg class="w-5 h-5 inline-block mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
                            </svg>
                            Search Events
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</section>

<!-- Main Content -->
<section class="py-12 bg-gray-50">
    <div class="max-w-7xl mx-auto px-6">
        
        @if (Model.HasSearched)
        {
            <div class="mb-6">
                <h2 class="text-2xl font-bold text-gray-900">
                    Search Results
                    <span class="text-gray-600 font-normal">(@Model.TotalResults found)</span>
                </h2>
            </div>
        }
        else
        {
            <div class="mb-6">
                <h2 class="text-2xl font-bold text-gray-900">Upcoming Events</h2>
                <p class="text-gray-600">Browse all upcoming events and announcements</p>
            </div>
        }

        <!-- Events Grid -->
        @if (Model.Events.Count > 0)
        {
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 mb-12">
                @for (int i = 0; i < Model.Events.Count; i++)
                {
                    var evt = Model.Events[i];
                    var priorityColor = evt.Priority == 1 ? "red" : evt.Priority == 2 ? "yellow" : "green";
                    var priorityText = evt.Priority == 1 ? "High Priority" : evt.Priority == 2 ? "Medium Priority" : "Normal";
                    
                    <div class="bg-white rounded-lg shadow-md hover:shadow-xl transition-shadow overflow-hidden flex flex-col">
                        <!-- Event Header -->
                        <div class="bg-gradient-to-r from-blue-800 to-blue-900 text-white p-4">
                            <div class="mb-2">
                                <span class="inline-block px-2 py-1 bg-white bg-opacity-20 rounded text-xs font-medium">
                                    @evt.Category
                                </span>
                            </div>
                            <h3 class="text-lg font-bold mb-1">@evt.Title</h3>
                            <div class="flex items-center text-sm text-teal-100">
                                <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                                </svg>
                                @evt.EventDate.ToString("MMM dd, yyyy")
                                @if (evt.EndDate.HasValue)
                                {
                                    <span> - @evt.EndDate.Value.ToString("MMM dd, yyyy")</span>
                                }
                            </div>
                        </div>

                        <!-- Event Body -->
                        <div class="p-4 flex flex-col flex-grow">
                            <p class="text-gray-600 text-sm mb-4 line-clamp-3">
                                @evt.Description
                            </p>

                            <div class="space-y-2 mb-4 flex-grow">
                                <div class="flex items-center text-sm text-gray-700">
                                    <svg class="w-4 h-4 mr-2 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                                    </svg>
                                    @evt.Location
                                </div>
                                @if (!string.IsNullOrEmpty(evt.Organizer))
                                {
                                    <div class="flex items-center text-sm text-gray-700">
                                        <svg class="w-4 h-4 mr-2 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                                        </svg>
                                        @evt.Organizer
                                    </div>
                                }
                            </div>

                            <!-- Priority Badge -->
                            <div class="mb-4">
                                <span class="inline-block px-2 py-1 bg-@(priorityColor)-100 text-@(priorityColor)-800 rounded text-xs font-medium">
                                    @priorityText
                                </span>
                            </div>

                            <!-- Tags -->
                            @if (evt.Tags.Count > 0)
                            {
                                <div class="flex flex-wrap gap-1 mb-4">
                                    @for (int j = 0; j < Math.Min(3, evt.Tags.Count); j++)
                                    {
                                        <span class="inline-block px-2 py-1 bg-gray-100 text-gray-600 rounded text-xs">
                                            #@evt.Tags[j]
                                        </span>
                                    }
                                </div>
                            }

                            <!-- View Details Button -->
                            <a href="@Url.Action("Details", "Events", new { id = evt.Id })" 
                               class="block w-full text-center px-4 py-2 bg-blue-800 text-white rounded-lg hover:bg-blue-900 transition-colors font-medium mt-auto">
                                View Details
                            </a>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="bg-white rounded-lg shadow-md p-12 text-center">
                <svg class="w-16 h-16 mx-auto text-gray-400 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                </svg>
                <h3 class="text-xl font-semibold text-gray-900 mb-2">No Events Found</h3>
                <p class="text-gray-600 mb-4">
                    @if (Model.HasSearched)
                    {
                        <text>Try adjusting your search criteria to find more events.</text>
                    }
                    else
                    {
                        <text>There are no upcoming events at this time. Check back soon!</text>
                    }
                </p>
                @if (Model.HasSearched)
                {
                    <a href="@Url.Action("Index", "Events")" class="inline-block px-6 py-2 bg-blue-800 text-white rounded-lg hover:bg-blue-900 transition-colors">
                        View All Events
                    </a>
                }
            </div>
        }

        <!-- Recommended Events Section -->
        @if (Model.RecommendedEvents.Count > 0)
        {
            <div class="mt-12">
                <div class="bg-gradient-to-r from-blue-800 to-blue-900 rounded-lg p-6 mb-6">
                    <h2 class="text-2xl font-bold text-white mb-2">
                        <svg class="w-6 h-6 inline-block mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"></path>
                        </svg>
                        Recommended For You
                    </h2>
                    <p class="text-teal-100">Based on your interests and search history</p>
                </div>

                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                    @for (int i = 0; i < Model.RecommendedEvents.Count; i++)
                    {
                        var evt = Model.RecommendedEvents[i];
                        
                        <div class="bg-white rounded-lg shadow-md hover:shadow-xl transition-shadow overflow-hidden flex flex-col">
                            <div class="bg-gradient-to-r from-blue-800 to-blue-900 text-white p-4">
                                <div class="mb-2">
                                    <span class="inline-block px-2 py-1 bg-white bg-opacity-20 rounded text-xs font-medium">
                                        @evt.Category
                                    </span>
                                </div>
                                <h3 class="text-lg font-bold mb-1">@evt.Title</h3>
                                <div class="flex items-center text-sm text-teal-100">
                                    <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                                    </svg>
                                    @evt.EventDate.ToString("MMM dd, yyyy")
                                </div>
                            </div>

                            <div class="p-4 flex flex-col flex-grow">
                                <p class="text-gray-600 text-sm mb-4 line-clamp-3 flex-grow">
                                    @evt.Description
                                </p>
                                <a href="@Url.Action("Details", "Events", new { id = evt.Id })" 
                                   class="block w-full text-center px-4 py-2 bg-blue-800 text-white rounded-lg hover:bg-blue-900 transition-colors font-medium mt-auto">
                                    View Details
                                </a>
                            </div>
                        </div>
                    }
                </div>
            </div>
        }
    </div>
</section>

